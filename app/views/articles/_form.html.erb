<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  <div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content %>
  <div>

  <div class="btn btn-primary">
    <%= f.submit class:'btn btn-primary' 'Save' %>
  <div>
<% end %>